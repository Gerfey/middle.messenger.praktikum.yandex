<div class="form-item">
    <span class="form-item__label">{{ title }}</span>
    <label for="{{ title }}">
        <input id="{{ title }}" class="form-item__input" name="{{ input_name }}" type="{{ input_type }}" value="{{ input_value }}" placeholder="{{ input_placeholder }}">
    </label>

    <span class="form-item__span">{{ error_text }}</span>
</div>