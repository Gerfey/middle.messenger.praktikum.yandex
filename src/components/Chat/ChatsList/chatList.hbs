<div class="chat-column__left-items">
    {{#foreach chatsList }}
        <div class="left-items">
            <div class="left-items__status">
                <div class="status__avatar"></div>
            </div>
            <div class="left-items__info">
                <div class="info-title">
                    <h3 class="info-title__name">{{this.title}}</h3>
                    <div class="info-title__date">
                        {{#if this.last_message.time }}
                            <span class="date-time">{{formatTime this.last_message.time  "H:m" }}</span>
                        {{/if }}
                    </div>
                </div>
                <div class="info-subtitle">
                    <p class="info-subtitle__message">
                        {{#if this.last_message }}
                            {{#compare this.last_message.user.login '===' userInfo.login }}
                                <span class="message-name">Вы</span>
                                <span class="message-colon">:</span>
                            {{/compare }}
                            {{ this.last_message.content }}
                        {{/if }}
                    </p>
                    <div class="info-subtitle__badge">
                        {{# if this.unread_count }}
                            <div class="badge">{{this.unread_count}}</div>
                        {{/if }}
                    </div>
                </div>
            </div>
        </div>
    {{/foreach}}
</div>
